<!-- Single item -->
<div class="row">
    <div class="col-lg-3 col-md-12 mb-4 mb-lg-0 cartRows">
        <!-- Image -->
        <div class="bg-image hover-overlay hover-zoom ripple rounded robotImg" data-mdb-ripple-color="light">
            <img src="img/robots/<%= robot.model%>.png" class="w-100" alt="robot" />
            <a href="#!">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
            </a>
        </div>
    </div>

    <div class="col-lg-5 col-md-6 mb-4 mb-lg-0 cartRows">
        <!-- Data -->
        <p><strong><%= robot.company %> <%= robot.model %></strong></p>
        <p>Capabilities: <%= robot.capabilities %></p>
    </div>

    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 cartRows">
        <!-- Quantity -->
        <div class="d-flex mb-4 quantityContainer" style="max-width: 300px">
            <div data-mdb-input-init class="form-outline cartForm">
                <input id="form1" min="0" name="quantity" value="<%= robot.qty %>" class="form-control" />
                <label class="form-label" for="form1">Quantity</label>
            </div>
        </div>

        <!-- Price -->
        <p class="text-start text-md-center">
            <strong><%= robot.rate %></strong>
        </p>

    </div>
</div>
<hr class="my-4" />