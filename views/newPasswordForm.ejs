<%- include('templates/header') %>
  <main class="form-signin w-100 m-auto">
  <form action="/update-password" method="POST">
    <img class="mb-4" src="/img/favicon.ico" alt="" width="72" height="72">
    <h1 class="h3 mb-3 fw-normal">Reset Your Password</h1>

    <input type="hidden" name="userId" value="<%= id %>">
    <input type="hidden" name="token" value="<%= token %>">

    <div class="form-floating">
      <input type="password" class="form-control" id="password" name="password"  fdprocessedid="s85vqm" style="max-width: 30vw;" required>
      <label for="password">New Password</label>
    </div>

    <div class="form-floating">
      <input type="password" class="form-control" id="repeatPassword" name="repeatPassword" fdprocessedid="k965wp" style="max-width: 30vw;" required>
      <label for="repeatPassword">Repeat New Password</label>
    </div>

    <button class="btn btn-primary w-100 py-2" type="submit" fdprocessedid="3smvm7">Submit New Password</button>
    
    <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
  </form>
</main>
  <%- include('templates/footer') %>